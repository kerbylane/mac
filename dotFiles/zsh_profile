set -o vi
setopt interactivecomments
setopt prompt_subst

export MY_HOST_NAME=LAPTOP

alias vi='TERM=screen-bce vim'

export LANG=C

# Set the prompt
source ~/dev/mac/zsh_prompt.sh

export MYSQL_PS1="\u@\d \R:\m:\s> "

# causes `ls` to color different types of contents (dir, executable, etc.).
export CLICOLOR=1

# Use Macports' GNU versions in favor of MacOS versions
export PATH=/opt/local/libexec/gnubin:$PATH

export GPG_TTY=$(tty)

###############################
#
# Python
#
###############################

# Setting PATH for Python 3.8
# The original version is saved in .bash_profile.pysave
export PATH="/Library/Frameworks/Python.framework/Versions/3.8/bin:${PATH}"

export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

if command -v pyenv 1>/dev/null 2>&1; then
    eval "$(pyenv init -)"
fi

# standardize a place where local configuration settings can be stored.
source ~/local.conf

if [[ -d /opt/gradle/bin ]]; then
	export PATH=$PATH:/opt/gradle/bin
fi

